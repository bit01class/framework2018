<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                       http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
  	<welcome-file>index.do</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>dispatcherServlet</servlet-name>
  	<servlet-class>com.bit.core.DispatcherServlet</servlet-class>
  	<init-param>
  		<param-name>/index.do</param-name>
  		<param-value>com.bit.controller.IndexController</param-value>
  	</init-param>
  	<init-param>
  		<param-name>/list.do</param-name>
  		<param-value>com.bit.controller.ListController</param-value>
  	</init-param>
  	<init-param>
  		<param-name>/add.do</param-name>
  		<param-value>com.bit.controller.AddController</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>dispatcherServlet</servlet-name>
	<url-pattern>*.do</url-pattern>  
  </servlet-mapping>
</web-app>

















